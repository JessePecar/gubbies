{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "@core": [
        "libs/core/src"
      ],
      "@core/*": [
        "libs/core/src/*"
      ],
      "@bns/*": [
        "apps/bns-api/src/*",
      ],
      "@ar/*": [
        "apps/ar-api/src/*",
      ],
      "@pos/*": [
        "apps/pos-api/src/*",
      ],
      "@auth/*": [
        "apps/auth-api/src/*",
      ],
    }
  }
}